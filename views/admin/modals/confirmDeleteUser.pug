.modal.fade#delete-user-modal(tabindex="-1" aria-labelledby="delete-user-label" aria-hidden="true")
    .modal-dialog.modal-dialog-centered
        .modal-content#delete-user-modal-content
            .modal-header
                h5.modal-title#delete-user-label Delete user?
            .modal-body
                p Are you sure you wish to mark this user for deletion?
            .modal-footer
                button.btn.btn-primary#confirm-delete-user(type="button" data-bs-dismiss="modal") Yes
                button.btn.btn-secondary(type="button" data-bs-dismiss="modal") No
